<Window x:Class="Microsoft.Samples.Kinect.SpeechBasics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Speech Basics" Height="600" Width="640"
        Loaded="WindowLoaded" Closing="WindowClosing">

    <Grid Margin="10 0 10 0">
        <Label x:Name="Label2" Content="Message" HorizontalAlignment="Left" Margin="130,0,0,0" VerticalAlignment="Top" Width="463" Height="50" FontSize="30"/>
        <Label x:Name="Label1" Content="" HorizontalAlignment="Left" Margin="130,50,0,0" VerticalAlignment="Top" Width="482" Height="154" FontSize="20"/>
        <!--<Label x:Name="Label2" Content="Status2" HorizontalAlignment="Left" Margin="130,20,0,0" VerticalAlignment="Top" Width="500"/>-->
        <StatusBar Grid.Row="3" Height="23" HorizontalAlignment="Stretch" Name="statusBar" VerticalAlignment="Bottom" Background="White" >
            <StatusBarItem Padding="0">
                <TextBlock Name="statusBarText"></TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>